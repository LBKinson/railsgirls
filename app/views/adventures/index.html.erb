<p id="notice"><%= notice %></p>

<h2 class="adv">Your Adventures:</h2>

<div id="adventure-table">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Picture</th>
        <th>Visit</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @adventures.each do |adventure| %>
        <tr>
          <td><%= adventure.name %></td>
          <td><%= adventure.description %></td>
          <td><%= image_tag(adventure.picture_url, :width => 150) if adventure.picture.present? %></td>
          <td><%= adventure.visit %></td>
          <td><%= link_to 'Show', adventure %></td>
          <td><%= link_to 'Edit', edit_adventure_path(adventure) %></td>
          <td><%= link_to 'Destroy', adventure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Adventure', new_adventure_path %>
